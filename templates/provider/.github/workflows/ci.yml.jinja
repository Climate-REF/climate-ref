name: CI

on:
  push:
    branches: [main]
  pull_request:

jobs:
  tests:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: ["3.11", "3.12", "3.13"]
    steps:
      - uses: actions/checkout@v4

      - name: Install uv
        uses: astral-sh/setup-uv@v5

      - name: Set up Python {% raw %}${{ matrix.python-version }}{% endraw %}
        run: uv python install {% raw %}${{ matrix.python-version }}{% endraw %}

      - name: Install dependencies
        run: uv sync --python {% raw %}${{ matrix.python-version }}{% endraw %}

      - name: Run tests
        run: uv run pytest tests/ -v

  lint:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Install uv
        uses: astral-sh/setup-uv@v5

      - name: Install dependencies
        run: uv sync

      - name: Ruff check
        run: uv run ruff check src/ tests/

      - name: Ruff format
        run: uv run ruff format --check src/ tests/

  typecheck:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Install uv
        uses: astral-sh/setup-uv@v5

      - name: Install dependencies
        run: uv sync

      - name: Mypy
        run: uv run mypy src/

  # Test against multiple versions of climate-ref-core
  compat:
    runs-on: ubuntu-latest
    strategy:
      fail-fast: false
      matrix:
        core-version:
          - "release"  # Latest PyPI release
          - "dev"      # Latest main branch
    name: "compat (core: {% raw %}${{ matrix.core-version }}{% endraw %})"
    steps:
      - uses: actions/checkout@v4

      - name: Install uv
        uses: astral-sh/setup-uv@v5

      - name: Install dependencies
        run: uv sync

      - name: Install climate-ref-core (dev)
        if: matrix.core-version == 'dev'
        run: uv pip install "climate-ref-core @ git+https://github.com/Climate-REF/climate-ref.git@main#subdirectory=packages/climate-ref-core"

      - name: Run tests
        run: uv run pytest tests/ -v
